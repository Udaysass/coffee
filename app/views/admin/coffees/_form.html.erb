<div class="card text-center">
  <div class="card-header">

    
        <%= form_for [:admin, @coffee] do |form| %>
          <div>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
            <% @coffee.errors.full_messages_for(:name).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :amount %><br>
            <%= form.text_area :amount %><br>
            <% @coffee.errors.full_messages_for(:amount).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div>
            <%= form.label :image %><br>
            <%= form.file_field :image%>
          </div><br>

          <div>
            <%= form.submit "Create" %>
          </div>
        <% end %>
      
  </div>
</div>
