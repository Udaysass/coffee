<%= form_for [:admin, @coffee] do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount %><br>
    <%= form.text_area :amount %><br>
  </div>

  <div>
    <%= form.label :image %><br>
    <%= form.file_field :image%>
  </div>

  <div>
    <%= form.submit "Create" %>
  </div>
<% end %>
