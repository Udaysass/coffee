<div class="col-lg-10 offset-1 space">
  <div class="row">
    <h2>Confirm order information</h2>
  </div>

<%= form_with(model: @order, local: true) do |f| %>

  <div class="d-none d-lg-block space">
    <div class="row">
      <div class="col-lg-5"><h4>coffee name</h4></div>
      <div class="col-lg-2"><h4>cost price (tax included)</h4></div>
      <div class="col-lg-2"><h4>quantity</h4></div>
      <div class="col-lg-2"><h4>subtotal</h4></div>
    </div>
  </div>

  <% sum_all = 0 %>

<% @user_cards.each do |user_card| %>
  <div class="row space-sm">
    <div class="col-lg-3">
      <%= link_to coffee_path(user_card.coffee) do %>
      <%= attachment_image_tag(user_card.coffee, :image, :fill, 100, 100, fallback: "no_img.jpg ") %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= link_to coffee_path(user_card.coffee) do %>
      <%= user_card.coffee.name %>
      <% end %>
    </div>
    <div class="col-lg-2">
      <%= amount(user_card.coffee.amount) %>
    </div>
    <div class="col-lg-2">
      <%= user_card.quantity %>
    </div>
    <div class="col-lg-2">
      <%= sum_product = amount(user_card.coffee.amount).to_i * user_card.quantity %>Circle
      <% sum_all += sum_product %>
    </div>
  </div>
<%end%>
